<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.game.jhtc.repository.UserDao" >
  
  <!-- 查询全部的用户 -->
  <select id="findAll" resultType="com.game.jhtc.entity.User">
    select * from suser_info where 1=1
  </select>
  
  <!-- 保存一条用户数据 -->
  <insert id="save"
  	parameterType="com.game.jhtc.entity.User">
  	insert into suser_info (id, uid, nick, score, length)
  		values(#{id}, #{uid}, #{nick}, #{score},#{length})	
  </insert>
  
  <!-- 根据id查询用户rank信息 -->
  <select id="findById"
  	parameterType="java.lang.Integer"
  	resultType="com.game.jhtc.entity.User">
  		select nick,score from suser_info
  			where id=#{id}
  </select>
  
  <!-- 根据uid查询玩家id -->
  <select id="findByUid"
  	parameterType="java.lang.String"
  	resultType="com.game.jhtc.entity.User">
  		select id from suser_info 
  			where uid=#{uid}
  </select>
  
 <!--  根据gid修改用户数据 -->
  <update id="update" parameterType="com.game.jhtc.entity.User">
  	update suser_info set
  		nick=#{nick} where
  		 id=#{id}
  </update>
  
</mapper>