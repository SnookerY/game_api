<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.game.jhtc.repository.UserDao" >

  <!-- 查询全部的用户 ，查询接口没有用到-->
  <select id="findAll" resultType="com.game.jhtc.entity.User">
    select * from suser_info where 1=1 order by score desc
  </select>
  
  <!-- 根据gid查询玩家信息 -->
  <select id="findByGid"
  	parameterType="java.lang.Integer"
  	resultType="com.game.jhtc.entity.User">
  		select gid, nick, score, length from suser_info 
  			where gid=#{gid}
  </select>
  
  <!-- 根据id查询玩家rank分数，需求改动不再使用 -->
  <!-- <select id="findById"
  	parameterType="java.lang.Integer"
  	resultType="com.game.jhtc.entity.User">
  		select id, nick, score from suser_info
  			where id=#{id}
  </select> -->
  
  <!-- 根据客户端传来的uid生成gid，其他数据默认生成 -->
  <insert id="createGid"
  	parameterType="com.game.jhtc.entity.User">
  	insert into suser_info (uid)
  		values(#{uid})	
  </insert>
  
 <!--  根据玩家gid修改用户数据 -->
  <update id="update" parameterType="com.game.jhtc.entity.User">
  	update suser_info set
  		nick=#{nick} where
  		 gid=#{gid}
  </update>
  
</mapper>