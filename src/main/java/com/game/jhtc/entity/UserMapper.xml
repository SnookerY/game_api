<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.game.jhtc.repository.UserDao" >
  
  <!-- 查询全部的用户 -->
  <select id="findAll" resultType="com.game.jhtc.entity.User">
    select * from suser_info
  </select>
  
  <!-- 保存一条用户数据 -->
  <insert id="save"
  	parameterType="com.game.jhtc.entity.User">
  	insert into suser_info (uid,gid,nick,score)
  		values(#{uid}, #{gid}, #{nick}, #{score})	
  </insert>
  
  <!-- 根据gid查询用户 -->
  <select id="findById"
  	parameterType="java.lang.Integer"
  	resultType="com.game.jhtc.entity.User">
  		select * from suser_info where gid=#{gid}
  </select>
  
 <!--  根据gid修改用户数据 -->
  <update id="update" parameterType="com.game.jhtc.entity.User">
  	update suser_info set
  		nick=#{nick} where
  		 gid=#{gid}
  </update>
  
</mapper>